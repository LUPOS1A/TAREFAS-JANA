#include <stdio.h>

int main() {
    int somaPares = 0, num;

    printf("Digite 15 números:\n");
    for (int i = 0; i < 15; i++) {
        scanf("%d", &num);
        if (num % 2 == 0) {
            somaPares += num;
        }
    }

    printf("A soma dos números pares é: %d\n", somaPares);
    return 0;
}
